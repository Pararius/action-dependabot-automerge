{
  "name": "action-dependabot-automerge",
  "private": true,
  "main": "src/main.js",
  "type": "commonjs",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "build": "ncc build --source-map",
    "test": "jest"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.26.2",
    "eslint": "^7.17.0",
    "jest": "^26.6.3"
  },
  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": ["js"],
    "testMatch": ["**/*.test.js"],
    "verbose": true
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "es2017": true,
      "node": true
    },
    "rules": {
      "eslint-comments/no-use": "off",
      "import/no-namespace": "off"
    }
  }
}
